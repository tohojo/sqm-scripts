#!/bin/sh /etc/rc.common

START=50
USE_PROCD=1

service_triggers()
{
	procd_add_reload_trigger "sqm"
}

reload_service()
{
	stop "$@"
	start "$@"
}

start_service()
{
	/usr/lib/sqm/run.sh start "$@"
}

stop_service()
{
	/usr/lib/sqm/run.sh stop "$@"
}

boot()
{
	export SQM_VERBOSITY_MIN=5 # Silence errors
	/usr/lib/sqm/run.sh start
}
